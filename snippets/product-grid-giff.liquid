<div class="grid__item grid-product large--three-twelfths medium--six-twelfths small--six-twelfths">

<a href="" class="card grid-product__wrapper collection_banner__wrapper">
	{% if section.settings.collection_banner != blank %}
	<img src="{{section.settings.collection_banner | img_url: '264x360'}}" alt="{{section.settings.collection_banner.alt}}" class="banner__image" height="338">
	{% endif %}
	{% if section.settings.collection_banner_gif_link != blank %}
	<img src="{{section.settings.collection_banner_gif_link }}" alt="{{section.settings.collection_banner_title}}" class="gif__image">
	{% endif %}

	{%- assign banner_family = section.settings.collection_banner_font_family -%}
	{%- assign banner_font_stack = banner_family.family | append: ", " | append: banner_family.fallback_families -%}
	{%- assign banner_font_weight = banner_family.weight -%}
	{%- assign banner_font_style = banner_family.style -%}
	<link rel="preload" as="font" href="{{ banner_family | font_url }}" type="font/woff2" crossorigin>
	<style>
	{{ banner_family | font_face: font_display: "swap" }}
	</style>
	<div class="collection_banner_content" style="font-family: {{banner_font_stack}}; font-weight: {{banner_font_weight}}; font-style: {{banner_font_style}};">
		{% unless section.settings.collection_banner_title == blank %}
			<div class="collection_banner_title">
				{{section.settings.collection_banner_title}}
			</div>
		{% endunless %}
		{% if section.settings.collection_banner_button_label != blank %}
			<button type="button" class="collection_banner_btn">{{section.settings.collection_banner_button_label}}</button>
		{% endif %}
	</div>
</a>
</div>
