<div id="section-{{ section.id }}" class="profile {% unless section.settings.show_on_desktop %} medium--hide large--hide{% endunless %} {{ section.settings.section_style }}{% unless section.settings.show_on_mobile %} small--hide{% endunless %}" data-section-id="{{ section.id }}" data-section-type="profile-text-section">
  <div class="{%- if section.settings.padding_section -%}box{%- endif -%}">
    <div class="wrapper{{ section.settings.wrapper_size }}">
      {%- if section.blocks.size > 0 -%}

					{%- for block in section.blocks -%}
            <div class="profile__item" >
							{% if block.settings.title != blank %}
								<h2 class="h1 profile-title">{{block.settings.title}}</h2>
							{% endif %}
              {%- if block.settings.code != blank -%}
                <div class="profile__text {{ block.settings.text_alignment }}">
                  {{ block.settings.code }}
                </div>
              {%- else -%}
                <div class="text-center">
                  {{ 'home_page.onboarding.no_content' | t }}
                </div>
              {%- endif -%}
							<hr class="add__line">
							<div class="profile_status__wrapper">
								<a href="{%- if block.settings.status1_link != blank -%}{{block.settings.status1_link}} {%- else -%} # {%- endif -%}" class="status__item">
									{% if block.settings.status1_number !=blank %}
										<div class="status__number">
											{{block.settings.status1_number}}
										</div>
									{% endif %}
									{% if block.settings.status1_label != blank %}
											<div class="status__label">
												{{block.settings.status1_label}}
											</div>
									{% endif %}
								</a>
								<a href="{%- if block.settings.status2_link != blank -%}{{block.settings.status2_link}} {%- else -%} # {%- endif -%}" class="status__item">
									{% if block.settings.status2_number !=blank %}
										<div class="status__number">
											{{block.settings.status2_number}}
										</div>
									{% endif %}
									{% if block.settings.status2_label != blank %}
											<div class="status__label">
												{{block.settings.status2_label}}
											</div>
									{% endif %}
								</a>
								<a href="{%- if block.settings.status3_link != blank -%}{{block.settings.status3_link}} {%- else -%} # {%- endif -%}" class="status__item">
									{% if block.settings.status3_number !=blank %}
										<div class="status__number">
											{{block.settings.status3_number}}
										</div>
									{% endif %}
									{% if block.settings.status3_label != blank %}
											<div class="status__label">
												{{block.settings.status3_label}}
											</div>
									{% endif %}
								</a>
								<a href="{%- if block.settings.status4_link != blank -%}{{block.settings.status4_link}} {%- else -%} # {%- endif -%}" class="status__item">
									{% if block.settings.status4_number !=blank %}
										<div class="status__number">
											{{block.settings.status4_number}}
										</div>
									{% endif %}
									{% if block.settings.status4_label != blank %}
											<div class="status__label">
												{{block.settings.status4_label}}
											</div>
									{% endif %}
								</a>
							</div>
							<div class="profile__vendor">
								{%- if block.settings.vendor_image != blank -%}
								<div class="vendor-image vendor-image-{{ block.id }} bgset lazyload"
										{%- render 'lazysizes', img: block.settings.vendor_image, img_type: 'background' -%}>
								</div>
								{%- if block.settings.vendor_image -%}
								<style>
									.vendor-image-{{ block.id }} {
										background-position: {{ block.settings.vendor_image_position }};
									}
								</style>
								{%- endif -%}
							{%- else -%}
										{{ 'lifestyle-2' | placeholder_svg_tag: 'media placeholder-svg lazyload' }}
							{%- endif -%}
							{% if block.settings.vendor_text !=blank %}
								<div class="vendor__text">
									{{block.settings.vendor_text}}
								</div>
									
							{% endif %}
							</div>
            </div>
          {%- endfor -%}

        </div>
      {%- endif -%}

      {%- if section.blocks.size == 0 -%}
        {%- render 'no-blocks' -%}
      {%- endif -%}

  </div>
</div>

